pipeline {
    agent any

    environment {
        IMAGE_NAME = "shailendrajr/test_hub:v1"
        CONTAINER_NAME = "aangan-react-container"
        DOCKERHUB_CREDS = credentials("dockerhub-creds")
        scannerHome = tool 'sonar8.0'
    }

    stages {

        stage("Checkout Code") {
            steps {
                checkout scm
            }
        }

        stage("SonarQube Analysis") {
            steps {
                withSonarQubeEnv('sonarcred') {
                    sh '''
                        set +e
                        ${scannerHome}/bin/sonar-scanner \
                        -Dsonar.projectKey=aangan-react \
                        -Dsonar.projectName=aangan-react \
                        -Dsonar.projectVersion=1.0 \
                        -Dsonar.sources=. \
                        -Dsonar.language=js
                        echo "⚠️ SonarQube analysis completed (non-blocking)"
                        exit 0
                    '''
                }
            }
        }

        stage("Build Docker Image") {
            steps {
                sh '''
                    docker build -t $IMAGE_NAME .
                '''
            }
        }

        stage("Trivy Image Scan") {
            steps {
                script {
                    def result = sh(
                        script: "trivy image --severity HIGH,CRITICAL $IMAGE_NAME || true",
                        returnStatus: true
                    )

                    if (result != 0) {
                        echo "⚠️ HIGH/CRITICAL vulnerabilities found"
                        sh "trivy image --exit-code 1 --severity CRITICAL $IMAGE_NAME"
                    } else {
                        echo "✅ No CRITICAL vulnerabilities found"
                    }
                }
            }
        }

        stage("Docker Hub Login") {
            steps {
                sh '''
                    echo "$DOCKERHUB_CREDS_PSW" | docker login \
                    -u "$DOCKERHUB_CREDS_USR" \
                    --password-stdin
                '''
            }
        }

        stage("Push Image to Docker Hub") {
            steps {
                sh '''
                    docker push $IMAGE_NAME
                '''
            }
        }

        stage("Run Docker Container") {
            steps {
                sh '''
                    docker rm -f $CONTAINER_NAME || true
                    docker run -d \
                      --name $CONTAINER_NAME \
                      -p 3000:80 \
                      $IMAGE_NAME
                '''
            }
        }
    }

    post {
        success {
            echo "✅ Pipeline completed successfully"
        }
        failure {
            echo "❌ Pipeline failed"
        }
    }
}
